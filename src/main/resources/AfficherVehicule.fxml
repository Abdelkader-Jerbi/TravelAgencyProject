<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.VoitureController"
            style="-fx-background-color: #F5F7FA;">

   <top>
      <HBox spacing="15" style="-fx-background-color: white; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
         <children>
            <Label text="Recherche :" style="-fx-font-weight: bold; -fx-text-fill: #333333; -fx-font-size: 14px;"/>
            <TextField fx:id="searchField" promptText="Marque, Modèle, Matricule..." style="-fx-pref-width: 250px; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #CCC;"/>

            <Label text="Disponibilité :" style="-fx-font-weight: bold; -fx-text-fill: #333333; -fx-font-size: 14px;"/>
            <ComboBox fx:id="disponibiliteFilter" prefWidth="150" style="-fx-background-radius: 5; -fx-border-radius: 5;"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Button fx:id="refreshButton" text="Rafraîchir"
                    style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>

            <Button fx:id="addOrUpdateButton" text="Ajouter"
                    style="-fx-background-color: #4A90E2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>

            <!-- Nouveau bouton Export PDF -->
            <Button fx:id="btnExportPdf" text="Exporter PDF"
                    style="-fx-background-color: #D35400; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>
         </children>

      </HBox>
   </top>

   <center>
      <VBox spacing="5" style="-fx-padding: 20;">
         <TableView fx:id="voitureTable" prefHeight="420" style="-fx-background-color: white; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
            <columns>
               <TableColumn fx:id="imagePath" text="Image" prefWidth="130" />
               <TableColumn fx:id="marqueCol" text="Marque" prefWidth="130"/>
               <TableColumn fx:id="modelCol" text="Modèle" prefWidth="130"/>
               <TableColumn fx:id="prixCol" text="Prix par jour" prefWidth="110"/>
               <TableColumn fx:id="matriculeCol" text="Matricule" prefWidth="130"/>
               <TableColumn fx:id="disponible" text="Disponible" prefWidth="110"/>
               <TableColumn fx:id="actionCol" text="Actions" prefWidth="180"/>
            </columns>
         </TableView>

         <Pagination fx:id="pagination" pageCount="1" maxPageIndicatorCount="7" style="-fx-background-color: transparent;" />
      </VBox>
   </center>

</BorderPane>
