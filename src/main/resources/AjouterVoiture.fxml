<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/17.0.15"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.AjouterVoitureController">
    <children>

        <!-- Libellés -->
        <Label layoutX="50.0" layoutY="30.0" text="Marque" />
        <Label layoutX="50.0" layoutY="80.0" text="Modèle" />
        <Label layoutX="50.0" layoutY="130.0" text="Matricule" />
        <Label layoutX="50.0" layoutY="180.0" text="Prix" />
        <Label layoutX="50.0" layoutY="230.0" text="Image" />

        <!-- Champs de texte -->
        <TextField fx:id="marqueField" layoutX="150.0" layoutY="30.0" />
        <TextField fx:id="modeleField" layoutX="150.0" layoutY="80.0" />
        <TextField fx:id="matriculeField" layoutX="150.0" layoutY="130.0" />
        <TextField fx:id="prixField" layoutX="150.0" layoutY="180.0" />

        <!-- Bouton pour choisir l'image -->
        <Button layoutX="150.0" layoutY="230.0"
                mnemonicParsing="false"
                onAction="#handleChoisirImage"
                text="Choisir une image" />

        <!-- Aperçu de l'image -->
        <ImageView fx:id="imagePreview"
                   layoutX="350.0"
                   layoutY="30.0"
                   fitWidth="200.0"
                   fitHeight="150.0"
                   preserveRatio="true" />

        <!-- Boutons d'action -->
        <Button layoutX="150.0" layoutY="300.0"
                mnemonicParsing="false"
                onAction="#handleAjouterVoiture"
                text="Ajouter Voiture" />
        <Button layoutX="300.0" layoutY="300.0"
                mnemonicParsing="false"
                onAction="#handleAnnuler"
                text="Annuler" />

    </children>
</AnchorPane>
