<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="700.0" style="-fx-background-color: linear-gradient(to bottom, #e0f7fa, #ffffff);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ChercherVolController">

   <children>

      <!-- Cadre central -->
      <Rectangle arcHeight="30" arcWidth="30" fill="#ffffff" height="340" layoutX="100" layoutY="50" stroke="#0097a7" strokeWidth="2" width="500" />

      <!-- Titre -->
      <Label layoutX="220.0" layoutY="65.0" text="🔍 Chercher un Vol" textFill="#00796b" underline="true">
         <font>
            <Font name="Arial Bold" size="20.0" />
         </font>
      </Label>

      <!-- Labels et champs -->
      <Label layoutX="160.0" layoutY="120.0" text="Départ :" textFill="#004d40" />
      <TextField fx:id="departField" layoutX="240.0" layoutY="115.0" prefWidth="250.0" />

      <Label layoutX="160.0" layoutY="165.0" text="Destination :" textFill="#004d40" />
      <TextField fx:id="destinationField" layoutX="240.0" layoutY="160.0" prefWidth="250.0" />

      <Label layoutX="160.0" layoutY="210.0" text="Date :" textFill="#004d40" />

      <Label layoutX="160.0" layoutY="255.0" text="Catégorie :" textFill="#004d40" />
      <ChoiceBox fx:id="categorieChoiceBox" layoutX="240.0" layoutY="250.0" prefWidth="250.0" />

      <!-- Bouton -->
      <Button fx:id="rechercherButton" layoutX="290.0" layoutY="310.0" style="-fx-background-color: #00796b; -fx-background-radius: 20px; -fx-padding: 8 20; -fx-cursor: hand;" text="Rechercher" textFill="white">
         <font>
            <Font name="Arial" size="14.0" />
         </font>
      </Button>
      <DatePicker fx:id="dateField" layoutX="239.0" layoutY="207.0" prefHeight="26.0" prefWidth="250.0" />

   </children>
</AnchorPane>
