<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="controllers.ConfirmationReservation"
           styleClass="main-bg" stylesheets="@theme-voyage.css"
           prefWidth="700" prefHeight="500">
    
    <children>
        <VBox spacing="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <!-- En-tête avec barre de navigation -->
            <HBox styleClass="nav-bar" alignment="CENTER_LEFT" spacing="10">
                <padding><Insets top="8" right="15" bottom="8" left="15"/></padding>
                <Label text="Confirmation de réservation" styleClass="nav-title"/>
            </HBox>
            
            <!-- Contenu principal -->
            <StackPane VBox.vgrow="ALWAYS">
                <VBox spacing="20" style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 6, 0, 0, 4);" 
                      maxWidth="600" alignment="CENTER">
                    <padding>
                        <Insets top="30" right="40" bottom="30" left="40"/>
                    </padding>
            
                    <!-- Icône de succès -->
                    <VBox alignment="CENTER" spacing="10">
                        <Label text="✓" style="-fx-font-size: 48px; -fx-text-fill: #2ecc71;"/>
                        <Label text="Réservation confirmée" styleClass="label-section"/>
                    </VBox>
            
                    <!-- Message de confirmation -->
                    <VBox spacing="15" style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-padding: 20;">
                        <Label fx:id="confirmationLabel" wrapText="true" styleClass="feature-value"/>
                    </VBox>
            
                    <!-- Boutons d'action -->
                    <HBox spacing="20" alignment="CENTER">
                        <Button fx:id="payerButton" text="Payer" 
                                onAction="#handlePayerButtonClick"
                                onMouseEntered="#handlePayerButtonHover"
                                onMouseExited="#handlePayerButtonExit"
                                styleClass="action-btn" prefWidth="120"/>
            
                        <Button fx:id="retourButton" text="Retour" 
                                onAction="#handleRetourButtonClick"
                                onMouseEntered="#handleRetourButtonHover"
                                onMouseExited="#handleRetourButtonExit"
                                styleClass="action-btn supprimer" prefWidth="120"/>
                    </HBox>
                </VBox>
            </StackPane>
        </VBox>
    </children>
</AnchorPane>
