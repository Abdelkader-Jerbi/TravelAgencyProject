<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.DetailVoitureController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: #f5f5f5;">

    <!-- Barre de navigation -->
    <HBox alignment="CENTER_LEFT" layoutX="0" layoutY="0" prefHeight="60" prefWidth="800" spacing="15"
          style="-fx-background-color: #3e50b4; -fx-padding: 10;">
        <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">
            <image>
                <Image url="@images/logo2.png" />
            </image>
        </ImageView>

        <TextField fx:id="searchField" promptText="Rechercher"
                   style="-fx-pref-width: 250px; -fx-padding: 5;" HBox.hgrow="ALWAYS">
            <cursor>
                <Cursor fx:constant="DISAPPEAR" />
            </cursor>
        </TextField>

        <HBox alignment="CENTER_RIGHT" spacing="8">
            <AnchorPane layoutX="580" layoutY="10">
                <ImageView fx:id="panierIcon" fitHeight="30" fitWidth="30" preserveRatio="true">
                    <image>
                        <Image url="@images/pannier.png" />
                    </image>
                </ImageView>
                <Label fx:id="notificationLabel"
                       text="0"
                       layoutX="20" layoutY="-5"
                       style="-fx-background-color: red; -fx-text-fill: white;
                  -fx-font-size: 10px; -fx-padding: 1 6;
                  -fx-background-radius: 10;" />
            </AnchorPane>
        </HBox>
    </HBox>

    <!-- Catégories -->
    <HBox alignment="CENTER" layoutX="0" layoutY="60" prefHeight="40" prefWidth="800" spacing="25"
          style="-fx-background-color: #5c6bc0; -fx-padding: 10;">
        <Button fx:id="hotelButton" text="Hôtel" style="-fx-background-color: #ff9800; -fx-text-fill: white;" />
        <Button fx:id="voitureButton" text="Voiture" style="-fx-background-color: #ff9800; -fx-text-fill: white;" />
        <Button fx:id="billetButton" text="Billet" style="-fx-background-color: #ff9800; -fx-text-fill: white;" />
    </HBox>

    <!-- Détails de la voiture -->
    <VBox layoutX="160" layoutY="120" prefWidth="480" spacing="15"
          style="-fx-padding: 20; -fx-background-color: #ffffff; -fx-border-width: 1;
                 -fx-border-color: #5c6bc0; -fx-border-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 1);">

        <ImageView fx:id="imageView" fitHeight="200" fitWidth="200" preserveRatio="true"
                   style="-fx-alignment: center;" />

        <Label fx:id="marqueLabel" text="Marque : " style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <Label fx:id="modeleLabel" text="Modèle : " style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <Label fx:id="prixLabel" text="Prix : " style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <Label fx:id="matriculeLabel" text="Matricule : " style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <Label fx:id="disponibleLabel" text="Disponible : " style="-fx-font-size: 14px; -fx-font-weight: bold;" />

        <!-- Boutons d'action -->
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="reserverButton" text="Réserver"
                    onAction="#handleReserver"
                    style="-fx-background-color: #43A047; -fx-text-fill: white;
                           -fx-font-size: 13px; -fx-padding: 6 12;" />
            <Button fx:id="annulerButton" text="Annuler"
                    style="-fx-background-color: #f44336; -fx-text-fill: white;
                           -fx-font-size: 13px; -fx-padding: 6 12;" />
        </HBox>
    </VBox>
</AnchorPane>
