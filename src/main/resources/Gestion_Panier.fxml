<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="gridPane" alignment="CENTER" hgap="10" vgap="10"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.GestionPanierController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- ID Panier -->
    <Label text="ID Panier:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="idPanierField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <!-- ID Réservation -->
    <Label text="ID Réservation:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="idReservationField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <!-- ID Vol -->
    <Label text="ID Vol:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="idVolField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <!-- ID Hébergement -->
    <Label text="ID Hébergement:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="idHebergementField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <!-- Date de création -->
    <Label text="Date de création:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <DatePicker fx:id="createdAtPicker" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <!-- Total à payer -->
    <Label text="Total à payer (€):" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="totalField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <!-- Statut de réservation -->
    <Label text="Statut de réservation:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <ComboBox fx:id="statutComboBox" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <!-- Boutons -->
    <Button text="Enregistrer" onAction="#handleEnregistrer" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
    <Button text="Annuler" onAction="#handleAnnuler" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
</GridPane>
