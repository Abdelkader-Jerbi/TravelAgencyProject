                    <TextField fx:id="prixField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                </GridPane>

                <HBox spacing="20" alignment="CENTER">
                    <Button text="Enregistrer" onAction="#enregistrerModification"/>

                </HBox>
            </children>
        </VBox>
    </children>
