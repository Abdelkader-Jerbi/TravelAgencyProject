<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="Controller.ModifierVoitureController">
    <children>
        <VBox spacing="15.0" alignment="CENTER"
              AnchorPane.topAnchor="20.0"
              AnchorPane.leftAnchor="20.0"
              AnchorPane.rightAnchor="20.0">
            <padding>
                <Insets top="10" right="10" bottom="20" left="10"/>
            </padding>
            <children>
                <Label text="Modifier la Voiture" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                <GridPane hgap="10" vgap="10">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="Marque :" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="marqueField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="ModÃ¨le :" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="modeleField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Matricule :" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="matriculeField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Prix :" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="prixField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Image :" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <Button text="Importer Image" fx:id="importImageButton" onAction="#importerImage"
                            GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <Label text="Disponible :" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <CheckBox fx:id="disponibleCheckBox" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                    <ImageView fx:id="imageView" fitHeight="100" fitWidth="150" preserveRatio="true"
                               GridPane.rowIndex="6" GridPane.columnIndex="1"/>
                </GridPane>

                <HBox spacing="20" alignment="CENTER">
                    <Button fx:id="enregistrerButton" text="Enregistrer" onAction="#enregistrerModification"/>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
