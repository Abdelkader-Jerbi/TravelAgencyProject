<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.Reclamation.AjouterReclamation"
            style="-fx-background-color: linear-gradient(to bottom, #e3f2fd, #ffffff);">
    
    <VBox spacing="20" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" 
          AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">
        
        <Label text="Soumettre une Réclamation" 
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1976D2; -fx-font-family: 'Segoe UI';"/>
        
        <GridPane vgap="10" hgap="10">
            <Label text="Catégorie:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <ComboBox fx:id="categorieComboBox" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            
            <Label text="Commentaire:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextArea fx:id="commentaireTextArea" prefRowCount="4" prefWidth="300" 
                     wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        </GridPane>
        
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button fx:id="retourButton" text="Retour" onAction="#handleRetour"
                    style="-fx-background-color: #f46624; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button fx:id="soumettreButton" text="Soumettre" onAction="#handleSoumettre"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </VBox>
</AnchorPane>