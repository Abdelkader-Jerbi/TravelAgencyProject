<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="Controller.ReservationVoitureController"
            prefWidth="800" prefHeight="600" style="-fx-background-color: #f4f6f9;">

    <!-- ===== Navbar ===== -->
    <HBox alignment="CENTER_LEFT" layoutX="0" layoutY="0" prefHeight="60" prefWidth="800" spacing="10"
          style="-fx-background-color: #1E88E5; -fx-padding: 10;">
        <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">
            <image>
                <Image url="@images/logo2.png" />
            </image>
        </ImageView>

        <TextField fx:id="searchField" promptText="Rechercher"
                   style="-fx-pref-width: 200px; -fx-padding: 6 10; -fx-background-radius: 15;" />

        <HBox alignment="CENTER_RIGHT" spacing="5">
            <AnchorPane>
                <ImageView fx:id="panierIcon" fitHeight="24" fitWidth="24" preserveRatio="true">
                    <image>
                        <Image url="@images/pannier.png" />
                    </image>
                </ImageView>
                <Label fx:id="notificationLabel" text="0"
                       layoutX="14" layoutY="-5"
                       style="-fx-background-color: red; -fx-text-fill: white; -fx-font-size: 9px;
                              -fx-padding: 1 4; -fx-background-radius: 10;" />
            </AnchorPane>
        </HBox>
    </HBox>

    <!-- ===== Sidebar ===== -->
    <VBox layoutX="0" layoutY="60" prefWidth="120" prefHeight="540"
          style="-fx-background-color: #3949AB; -fx-padding: 10; -fx-spacing: 10;">
        <Button fx:id="hotelButton" text="Hôtel"
                style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 13px;" />
        <Button fx:id="voitureButton" text="Voiture"
                style="-fx-background-color: #FFB300; -fx-text-fill: white; -fx-font-size: 13px;" />
        <Button fx:id="billetButton" text="Billet"
                style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 13px;" />
    </VBox>

    <!-- ===== Contenu principal réduit ===== -->
    <VBox spacing="15" layoutX="140" layoutY="80" prefWidth="640" prefHeight="500"
          style="-fx-background-color: #ffffff; -fx-padding: 15; -fx-border-radius: 10; -fx-border-color: #ddd; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 1);">

        <Label text="Réservation de voiture" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <HBox spacing="10">
            <ImageView fx:id="voitureImage" fitHeight="100" fitWidth="150" preserveRatio="true" />
            <VBox spacing="5">
                <HBox spacing="5">
                    <Label text="Marque :" style="-fx-font-size: 13px;"/>
                    <Label fx:id="marqueLabel" text="Marque voiture" style="-fx-font-size: 13px;" />
                </HBox>
                <HBox spacing="5">
                    <Label text="Modèle :" style="-fx-font-size: 13px;"/>
                    <Label fx:id="modeleLabel" text="Modèle voiture" style="-fx-font-size: 13px;" />
                </HBox>
                <HBox spacing="5">
                    <Label text="Prix :" style="-fx-font-size: 13px;"/>
                    <Label fx:id="prixLabel" text="Prix voiture" style="-fx-font-size: 13px;" />
                </HBox>
            </VBox>
        </HBox>

        <VBox spacing="10">
            <HBox spacing="5">
                <Label text="Nom :" style="-fx-font-size: 13px;"/>
                <TextField fx:id="nomClientField" promptText="Nom" style="-fx-font-size: 13px;" />
                <Label text="Prénom :" style="-fx-font-size: 13px;"/>
                <TextField fx:id="prenomClientField" promptText="Prénom" style="-fx-font-size: 13px;" />
            </HBox>

            <HBox spacing="5">
                <ComboBox fx:id="villeDepartCombo" promptText="Départ" prefWidth="150" style="-fx-font-size: 13px;"/>
                <ComboBox fx:id="villeRetourCombo" promptText="Retour" prefWidth="150" style="-fx-font-size: 13px;"/>
            </HBox>

            <HBox spacing="5">
                <DatePicker fx:id="dateDebutPicker" promptText="Début" style="-fx-font-size: 13px;"/>
                <DatePicker fx:id="dateFinPicker" promptText="Fin" style="-fx-font-size: 13px;"/>
            </HBox>

            <CheckBox fx:id="chauffeurCheckBox" text="Avec chauffeur" style="-fx-font-size: 13px;"/>
        </VBox>

        <Button fx:id="btnRechercher"
                onAction="#passerAPaiement"
                text="Passer à paiement"
                style="-fx-background-color: #43A047; -fx-text-fill: white; -fx-font-size: 14px;
                       -fx-padding: 6 15; -fx-background-radius: 8;" />
    </VBox>
</AnchorPane>
