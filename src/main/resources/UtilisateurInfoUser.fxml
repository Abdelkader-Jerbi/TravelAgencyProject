<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.UtilisateurInfoUser">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="0.0" layoutY="0.0" prefHeight="500.0" prefWidth="700.0" spacing="20.0">
            <children>
                <!-- Header -->
                <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="700.0" style="-fx-background-color: #f46624;">
                    <children>
                        <Button fx:id="retourAfficherUtilisateurss" onAction="#retourAfficherUtilisateurss" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 5;" text="Retour">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                            <HBox.margin>
                                <Insets left="20.0" />
                            </HBox.margin>
                        </Button>
                        <Label alignment="CENTER" prefHeight="60.0" prefWidth="600.0" text="User Profile" textAlignment="CENTER" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>

                <!-- Profile Card -->
                <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="650.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);">
                    <children>
                        <!-- Role Badge -->
                        <Label fx:id="roleFieldLabel" alignment="CENTER" prefHeight="30.0" prefWidth="120.0" style="-fx-background-color: #f46624; -fx-background-radius: 15; -fx-text-fill: white;" text="USER">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                        </Label>

                        <!-- User Info -->
                        <VBox alignment="CENTER_LEFT" prefHeight="300.0" prefWidth="600.0" spacing="15.0">
                            <children>
                                <!-- Name -->
                                <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="600.0">
                                    <children>
                                        <Label prefHeight="30.0" prefWidth="150.0" text="Nom:">
                                            <font>
                                                <Font name="System Bold" size="16.0" />
                                            </font>
                                            <HBox.margin>
                                                <Insets left="50.0" />
                                            </HBox.margin>
                                        </Label>
                                        <Label fx:id="nomFieldLabel" prefHeight="30.0" prefWidth="300.0" style="-fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-background-color: #f8f8f8; -fx-padding: 5;">
                                            <font>
                                                <Font size="16.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>

                                <!-- First Name -->
                                <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="600.0">
                                    <children>
                                        <Label prefHeight="30.0" prefWidth="150.0" text="Prenom:">
                                            <font>
                                                <Font name="System Bold" size="16.0" />
                                            </font>
                                            <HBox.margin>
                                                <Insets left="50.0" />
                                            </HBox.margin>
                                        </Label>
                                        <Label fx:id="prenomFieldLabel" prefHeight="30.0" prefWidth="300.0" style="-fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-background-color: #f8f8f8; -fx-padding: 5;">
                                            <font>
                                                <Font size="16.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>

                                <!-- Email -->
                                <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="600.0">
                                    <children>
                                        <Label prefHeight="30.0" prefWidth="150.0" text="Email:">
                                            <font>
                                                <Font name="System Bold" size="16.0" />
                                            </font>
                                            <HBox.margin>
                                                <Insets left="50.0" />
                                            </HBox.margin>
                                        </Label>
                                        <Label fx:id="emailFieldLabel" prefHeight="30.0" prefWidth="300.0" style="-fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-background-color: #f8f8f8; -fx-padding: 5;">
                                            <font>
                                                <Font size="16.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>

                                <!-- Phone -->
                                <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="600.0">
                                    <children>
                                        <Label prefHeight="30.0" prefWidth="150.0" text="Telephone:">
                                            <font>
                                                <Font name="System Bold" size="16.0" />
                                            </font>
                                            <HBox.margin>
                                                <Insets left="50.0" />
                                            </HBox.margin>
                                        </Label>
                                        <Label fx:id="telephoneFieldLabel" prefHeight="30.0" prefWidth="300.0" style="-fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-background-color: #f8f8f8; -fx-padding: 5;">
                                            <font>
                                                <Font size="16.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>
                            </children>
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                        </VBox>

                        <!-- Buttons -->
                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                                <Button fx:id="modifierUtilisateurBtn" onAction="#navigateToModifierUtilisateur" mnemonicParsing="false" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #f46624; -fx-text-fill: white; -fx-background-radius: 5;" text="Modifier Utilisateur">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Button>
                                <Button fx:id="changePasswordBtn" onAction="#navigateToChangePassword" mnemonicParsing="false" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #f46624; -fx-text-fill: white; -fx-background-radius: 5;" text="Change Password">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Button>
                            </children>
                            <VBox.margin>
                                <Insets bottom="20.0" top="20.0" />
                            </VBox.margin>
                        </HBox>
                    </children>
                    <VBox.margin>
                        <Insets left="25.0" right="25.0" />
                    </VBox.margin>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
