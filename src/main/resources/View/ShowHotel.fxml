<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.net.URL?>
<fx:root type="javafx.scene.layout.VBox"
         xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1"
         styleClass="hotel-card"
         spacing="10">

    <stylesheets>
        <URL value="@css/style.css" />
    </stylesheets>

    <!-- Hotel Image -->
    <ImageView fx:id="hotelImageView"   fitWidth="250" fitHeight="200" preserveRatio="true">
    </ImageView>

    <!-- Hotel Details -->
    <VBox spacing="5" styleClass="hotel-details" >
        <HBox alignment="CENTER_LEFT" spacing="5">
            <Label fx:id="nameLabel" styleClass="hotel-name"/>
            <Label fx:id="ratingLabel" styleClass="hotel-rating"/>
        </HBox>

        <Label fx:id="locationLabel" styleClass="hotel-location"/>

        <Text fx:id="descriptionText" styleClass="hotel-description" wrappingWidth="230"/>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Label fx:id="priceLabel" styleClass="hotel-price"/>
            <Button fx:id="bookButton" text="Book Now" styleClass="book-button" />
        </HBox>
    </VBox>
</fx:root>